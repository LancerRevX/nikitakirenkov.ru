{# def task: Task #}

<article>
    <div class="flex flex-row">
        <input type="checkbox" name="" id="" />
        <span>{{ task.text }}</span>
    </div>
    <div class="pl-4">
        {% for child in task.children.all() %}
            <tasks.Task :task="child"></tasks.Task>
        {% endfor %}
    </div>
</article>
